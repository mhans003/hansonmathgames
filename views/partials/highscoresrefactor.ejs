<div id="highscores">
	<% if(scores.length > 0) { %>
		<h3>High Scores</h3>
		<% if(scores.length > 4) { %>
			<% for(let i = scores.length; i > scores.length - 5; i--) { %>
				<h6><strong><%= scores[i - 1].author.username %>: </strong><%= scores[i - 1].score %></h6>
			<% } %>
			<input class='lowestHighScore' style='display:none;' value='<%= scores[scores.length - 5].score %>'>
		<% } else if(scores.length > 3) { %>
			<% for(let i = scores.length; i > scores.length - 4; i--) { %>
				<h6><strong><%= scores[i - 1].author.username %>: </strong><%= scores[i - 1].score %></h6>
			<% } %>
			<input class='lowestHighScore' style='display:none;' value=''>
		<% } else if(scores.length > 2) { %>
			<% for(let i = scores.length; i > scores.length - 3; i--) { %>
				<h6><strong><%= scores[i - 1].author.username %>: </strong><%= scores[i - 1].score %></h6>
			<% } %>
			<input class='lowestHighScore' style='display:none;' value=''>
		<% } else if(scores.length > 1) { %>
			<% for(let i = scores.length; i > scores.length - 2; i--) { %>
				<h6><strong><%= scores[i - 1].author.username %>: </strong><%= scores[i - 1].score %></h6>
			<% } %>
			<input class='lowestHighScore' style='display:none;' value=''>
		<% } else { %>
			<% for(let i = scores.length; i > scores.length - 1; i--) { %>
				<h6><strong><%= scores[i - 1].author.username %>: </strong><%= scores[i - 1].score %></h6>
			<% } %>
			<input class='lowestHighScore' style='display:none;' value=''>
		<% } %>
	
		<br>
				
		

	
	<% } %>
	
	<h6 style="color:rgba(90, 90, 130, 0.9);"><i><strong>Your Highest Score: </strong><%= usersHighestScore %></i></h6>
	<input class='usershighscore' style='display:none;' value='<%= usersHighestScore %>'>
	
	<input class='lowestHighScore' style='display:none;' value=''>
	<input class='usershighscore' style='display:none;' value=''>
	
</div>
