<%- include("./partials/header") %>

<div class="container">
	<div class="row">
		<div class="credentialsform col-xsm-4">
			<form class="form-signin" action="/reset/<%= token %>" method="POST">
				<h1 class="h3 credentialsheading mb-3 font-weight-normal">Reset Password</h1>
				<div class="form-group">
					<label for="inputNewPassword" class="sr-only">New Password</label>
					<input type="password" id="inputNewPassword" class="form-control" name="password" placeholder="New Password" required autofocus>
				</div>
				<div class="form-group">
					<label for="confirmNewPassword" class="sr-only">Confirm Password</label>
					<input type="password" id="confirmNewPassword" class="form-control" name="confirm" placeholder="Confirm Password" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Update Password</button>
				</div>
			</form>
		</div>
	</div>
</div>


<%- include("./partials/footer") %>